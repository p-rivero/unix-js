{
  "name": "unix-js-parser",
  "module": "src/index.ts",
  "type": "module",
  "version": "0.0.1",
  "description": "The unix-js parser reads a directory and returns a JS object to be used with unix-js",
  "author": "p-rivero",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p-rivero/unix-js.git"
  },
  "bin": {
    "unix-js-parser": "./dist/index.js"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "terser": "^5.26.0",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "bun-types": "latest",
    "dts-bundle-generator": "^9.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "ts-auto-guard": "^4.1.4",
    "unix-js-lib": "../lib"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "lint": "eslint src test",
    "prepublishOnly": "bun bundle",
    "bundle": "bun generate-type-guards && bun typecheck && bun bundle:build",
    "bundle:build": "bun build src/index.ts --target=node --outdir dist --minify --no-bundle",
    "generate-type-guards": "ts-auto-guard --paths src/**/*.ts",
    "typecheck": "tsc --noEmit"
  }
}
