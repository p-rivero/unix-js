{
  "name": "unix-parser",
  "module": "src/index.ts",
  "type": "module",
  "version": "0.0.6",
  "description": "The unix.js parser reads a directory and returns a JS object to be used with unix.js",
  "author": "p-rivero",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p-rivero/unix-js.git"
  },
  "bin": {
    "unix-parser": "dist/index.js"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "terser": "^5.26.0",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "bun-types": "latest",
    "dts-bundle-generator": "^9.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "ts-auto-guard": "^4.1.4",
    "unix-core": "^0.0.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "lint": "eslint src",
    "prepublishOnly": "bun bundle",
    "bundle": "bun generate-type-guards && bun typecheck && bun bundle:build && bun bundle:copy-resources && bun bundle:postprocess",
    "bundle:build": "bun build src/index.ts --target=node --outdir dist -e typescript -e terser -e ts-command-line-args -e colors --minify",
    "bundle:copy-resources": "cp src/serialize/default-template.js dist/default-template.js",
    "bundle:postprocess": "sed -i '1s;^;#!/usr/bin/env node\\n;' dist/index.js",
    "generate-type-guards": "ts-auto-guard --paths src/**/*.ts",
    "typecheck": "tsc --noEmit"
  }
}
